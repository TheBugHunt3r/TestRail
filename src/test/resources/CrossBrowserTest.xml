<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="2" name="Cross tests TestRail" parallel="tests">

    <listeners>
        <listener class-name="utils.retry.RetryListener"/>
    </listeners>

    <test name="Chrome">
        <classes>
           <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.ProjectTest"/>
            <parameter name="browser" value="chrome"/>
        </classes>

    </test> <!-- Test -->
    <test name="Firefox">
        <classes>
            <class name="tests.ui.TestCasesTest"/>
            <class name="tests.ui.ToDoTest"/>
            <parameter name="browser" value="firefox"/>
        </classes>
    </test> <!-- Test -->
</suite>
